<!DOCTYPE html>
<html>
    <head>
        <meta charset="UTF-8" />
        <title>{% block title %}Welcome!{% endblock %}</title>
        {% block stylesheets %}
            <link href="{{ asset("css/bootstrap.min.css") }}" rel="stylesheet" />
        {% endblock %}
        <link rel="icon" type="image/x-icon" href="{{ asset('favicon.ico') }}" />
    </head>
    <body>
        <div id="Menu" class="container">

            <nav class="navbar navbar-expand-lg navbar-dark" style="background-color: #f56b2a;">
                <img src="{{ asset('favicon.ico') }}" class="thumbnail" alt="">
                <a class="navbar-brand">LEBONCOIN</a>
                <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarSupportedContent" aria-controls="navbarSupportedContent" aria-expanded="false" aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon"></span>
                </button>

                <div class="collapse navbar-collapse" id="navbarSupportedContent">
                    <ul class="navbar-nav mr-auto">
                        <li class="nav-item ">
                            <a class="nav-link {% if app.request.get("_route") == "annonce" %}active{% endif %}" href="{{ path("homepage") }}">Accueil</a>
                        </li>
                        {% if app.user and app.user.hasRole("ROLE_ADMIN") %}
                            <li class="nav-item">
                                <a class="nav-link {% if app.request.get("_route") == "back_office" %}active{% endif %}"
                                   href="{{ path("back_office") }}">Accès au back office</a>
                            </li>
                        {% endif %}
                        {% if app.user %}
                            <li class="nav-item">
                                <a class="nav-link"
                                   href="{{ path("fos_user_security_logout") }}">Déconnexion</a>
                            </li>
                        {% else %}
                            <li class="nav-item">
                                <a class="nav-link {% if app.request.get("_route") == "fos_user_security_login" %}active{% endif %}"
                                   href="{{ path("fos_user_security_login") }}">Connexion</a>
                            </li>
                        {% endif %}
                    </ul>
                </div>
            </nav>
        </div>

        <div class="container">
            {% block body %}{% endblock %}
        </div>
        {% block javascripts %}
            <script src="{{ asset("js/bootstrap.min.js") }}"></script>
        {% endblock %}
    </body>
</html>
