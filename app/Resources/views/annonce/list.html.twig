{% extends "base.html.twig" %}

{% block title %}Bienvenue sur Leboncoin{% endblock %}

{% block body %}
    <div id="wrapper">
        <div id="container">
            <div class="row">
                <div class="col-md-8">
                    <h1>Leboncoin</h1>
                </div>
                {% if app.user %}
                <div class=" float-md-right">
                    <a class="btn btn-success" href="{{ path("add_annonce") }}">Cr√©er une annonce</a>
                </div>
                {% endif %}
            </div>
            <div class="row">
                {% for annonce in annonces %}
                    <div class="col-md-12">
                        <a href="{{ path('details_add', {'id': annonce.id}) }}">
                            <h2>{{ annonce.titre }}</h2>
                        </a>
                        <p>{{ annonce.description }}</p>
                    </div>
                {% endfor %}
            </div>
        </div>
    </div>
{% endblock %}